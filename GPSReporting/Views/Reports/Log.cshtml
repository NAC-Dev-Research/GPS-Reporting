@model IEnumerable<GPSReporting.Models.LogList>
<br />
<br />

<div class="container-fluid" style="width:100%" align="center">
    <br />
    <strong class="card-text" style="font-weight:600; font-size:4rem; color:black">LOGS PAGE</strong>
    <hr style="background-color:black; height:0.1rem; width:30%; margin-top:-0.5rem; margin-bottom:0.5rem" />
    <br /><br />
</div>

<table class="taskList" style="width: 70%; border-collapse: collapse" bordercolor="black" cellspacing="0" cellpadding="1" align="center" border="1">
    <tbody>
        <tr style="background-color:#bfffdb">
            <td style="text-align:center" rowspan="1" colspan="1"><strong>LOGS</strong></td>
        </tr>
        <tr style="background-color: #e1f2d4">
            <td style="text-align:center" width="10%" rowspan="1" colspan="1"><strong>Descriptions</strong></td>
        </tr>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:center">@item.Date.ToShortDateString() (@item.Day) | User @item.FirstName @item.LastName @item.Details at @item.Login (Logout: @item.Logout)</td>
                </tr>
            }
        }
    </tbody>
</table><br />